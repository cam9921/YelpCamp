<% include partials/header %>
    <div class = 'container'>
        <header class='jumbotron'>
            <div class='container'>
                <h1>Welcome to Y'allpCamp!</h1>
                <p>View our stunning locations from all across the rural U.S.</p>
                <p>
                    <a class='btn btn-primary btn-lrg' href='/campgrounds/new'>Add New Campground</a>
                </p>
            </div>
        </header>

        <div class='row text-center' style='display:flex; flex-wrap: wrap;'>
            <% campgrounds.forEach((campground) => { %>
                <div class='col-md-3 col-sm-6'>
                    <div class='thumbnail'>
                        <img src='<%= campground.image %>'>
                        <div class='caption'>
                            <h4> <%= campground.name %> </h4>
                        </div>
                    </div>
                </div>
            <% }) %> 
        </div>
        
    </div>
<% include partials/footer %>